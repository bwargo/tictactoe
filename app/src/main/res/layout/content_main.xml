<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.bwargo.tictactoe.MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/B2"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:width="64dp"
        android:height="64dp"
        android:background="#f7f7f7" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/A2"
        android:width="64dp"
        android:height="64dp"
        android:background="#f7f7f7"
        android:layout_above="@+id/B2"
        android:layout_alignLeft="@+id/B2"
        android:layout_alignStart="@+id/B2"
        android:layout_marginBottom="16dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/B3"
        android:width="64dp"
        android:height="64dp"
        android:background="#f7f7f7"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/B2"
        android:layout_toEndOf="@+id/B2"
        android:layout_marginLeft="16dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/A3"
        android:width="64dp"
        android:height="64dp"
        android:background="#f7f7f7"
        android:layout_alignTop="@+id/A2"
        android:layout_alignLeft="@+id/B3"
        android:layout_alignStart="@+id/B3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/B1"
        android:width="64dp"
        android:height="64dp"
        android:background="#f7f7f7"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/B2"
        android:layout_toStartOf="@+id/B2"
        android:layout_marginRight="16dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/A1"
        android:width="64dp"
        android:height="64dp"
        android:background="#f7f7f7"
        android:layout_alignBottom="@+id/A2"
        android:layout_alignLeft="@+id/B1"
        android:layout_alignStart="@+id/B1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/C1"
        android:width="64dp"
        android:height="64dp"
        android:background="#f7f7f7"
        android:layout_below="@+id/B1"
        android:layout_alignLeft="@+id/B1"
        android:layout_alignStart="@+id/B1"
        android:layout_marginTop="16dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/C2"
        android:width="64dp"
        android:height="64dp"
        android:background="#f7f7f7"
        android:layout_alignTop="@+id/C1"
        android:layout_toRightOf="@+id/B1"
        android:layout_toEndOf="@+id/B1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/C3"
        android:width="64dp"
        android:height="64dp"
        android:background="#f7f7f7"
        android:layout_alignTop="@+id/C2"
        android:layout_alignLeft="@+id/B3"
        android:layout_alignStart="@+id/B3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/NewGame"
        android:id="@+id/clear"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ffbe00" />
</RelativeLayout>
